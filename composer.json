{
    "name": "amirami/inertia-codeigniter-4",
    "description": "Inertia server-side adapter for CodeIgniter 4",
    "keywords": [
        "inertia",
        "codeigniter"
    ],
    "homepage": "https://github.com/amirami/inertia-codeigniter-4",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Rami",
            "email": "me@amirrami.com",
            "homepage": "https://amirrami.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "codeigniter4/framework": "^4.0.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13.0",
        "phpunit/phpunit": "^9.3.0",
        "vimeo/psalm": "^4.30.0"
    },
    "autoload": {
        "psr-4": {
            "Inertia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Inertia\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
